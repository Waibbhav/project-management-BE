<% layout('/../layouts/mainLayout') -%>
<!-- BEGIN: Content-->
<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper container-xxl p-0">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <!-- acc-types list start -->
            <section class="app-user-list">
                <!-- list and filter start -->
                <div class="card">
                    <div class="card-body border-bottom">
                        <h4 class="card-title"><%= page_title %></h4>
                        <div class="row">
                            <div class="col-md-4 user_status">
                                <select id="StatusDropdown" class="form-select text-capitalize mb-md-0 mb-2xx cursor-pointer">
                                    <option value=""> View All Status </option>
                                    <option value="Active"> Active </option>
                                    <option value="Inactive"> Inactive </option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="card-datatable table-responsive pt-0">
                        <table class="user-list-table table">
                            <thead class="table-light">
                                <tr>
                                    <th></th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- Modal to add new acc-types starts-->
                    <div class="modal modal-slide-in new-acc-types-modal fade" id="modals-slide-in">
                        <div class="modal-dialog">
                            <form class="add-new-acc-types modal-content pt-0" id="add-new-acc-types" action="/business-types/update" method="POST" enctype='application/x-www-form-urlencoded'>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">Ã—</button>
                                <div class="modal-header mb-1">
                                    <h5 class="modal-title" id="exampleModalLabel">Update Business Type</h5>
                                </div>
                                <div class="modal-body flex-grow-1">
                                    <div class="mb-1">
                                        <label class="form-label" for="title">Title</label>
                                        <input type="text" class="form-control dt-title" id="title" placeholder="Title" name="title" />
                                    </div>
                                    <div class="mb-1">
                                        <label class="form-label" for="description">Description</label>
                                        <textarea class="form-control required" id="description" name="description" rows="4" placeholder="Description"></textarea>
                                    </div>
                                    <input type="hidden" name="id" id="id" value="">
                                    <button type="submit" class="btn btn-primary me-1 data-submit" id="SubmitBtn">Update</button>
                                    <button type="reset" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Modal to add new acc-types Ends-->
                </div>
                <!-- list and filter end -->
            </section>
            <!-- acc-types list ends -->

        </div>
    </div>
</div>
<!-- END: Content-->

<!-- BEGIN: Datatable JS-->
<script src="/js/datatables/app-business-types-list.js"></script>
<!-- END: Datatable JS-->